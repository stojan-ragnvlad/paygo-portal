import React from 'react';

export default class App extends React.Component {
  constructor(props) {
    super(props);

    this.state = {
      <% if (worker) { %>
        worker: new Worker(
          new URL(<%- worker.sourceUrl %>, import.meta.url)
        ),
      <% } %>

      <% if (string) { %>
        <%- string.variableName %>: '',
      <% } %>
    };

    <% if (worker) { %>
      this.state.worker.onmessage = (event) => {
        console.log(event.data);
      };
    <% } %>
  }

  <% if (worker) { %>
    onFileInputChange(event) {
      const file = event.target.files[0];

      if (file) {
        this.state.worker.postMessage(file);
      }
    }
  <% } %>

  onButtonChange(event) {
    let <%- actionDestination %> = <%- actionFunction %>();

    this.setState({ <%- actionDestination %> });
  }

  render() {
    return (
      <div>
        <h1>React App</h1>

        <% if (fileUploader) { %>
          <input
            key="1"
            type="file"
            accept="text/csv"
            onChange={(event) => this.onFileInputChange(event)}
          />
        <% } %>

        <% if (button) { %>
          <button
            key="1"
            onSubmit={(event) => this.onButtonChange(event)}
          ><%= labelWithin %></button>
        <% } %>

        <% if (paragraph) { %>
        <% } %>
      </div>
    );
  }
}

