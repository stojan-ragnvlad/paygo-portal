{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "2024.4.28",
  "title": "Application",
  "description": "An application in the software system.",
  "type": "object",
  "properties": {
    "version": {
      "description": "The application version, typically as a YYYY.M.D format",
      "type": "string",
      "pattern": "^[0-9][0-9][0-9][0-9]\.[0-9][0-9]?\.[0-9][0-9]?$"
    },
    "camera-scanner": {
      "properties": {
        "type": {
          "enum": [
            "qr-code"
          ]
      }
    },
    "data-encryption": {
      "properties": {
        "encryptionMethod": {
          "enum": [
            "finger-print",
            "numeric-code",
            "security-question",
            "password",
            "hash-key"
          ]
        }
      }
    },
    "data-storage": {
      "properties": {
        "accessFrequency": {
          "enum": [
            "low",
            "medium",
            "high"
          ]
        },
        "capacity": {
          "type": "object",
          "properties": {
            "amount": {
              "type": "integer"
            },
            "unit": {
              "enum": [
                "mb",
                "gb",
                "tb"
              ]
            }
          }
        }
      }
    },
    "platforms": {
      "description": "The hardware devices that the application can run on.",
      "type": "array",
      "items": {
        "enum": [
          "touch-screen-phone"
        ]
      }
    }
  },
  "required": [ "version", "platforms" ]
}
