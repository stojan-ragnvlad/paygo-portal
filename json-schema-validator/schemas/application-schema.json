{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "/application",
  "title": "Application",
  "description": "An application in the software system.",
  "type": "object",
  "properties": {
    "version": {
      "description": "The application version, typically as a YYYY.M.D format",
      "type": "string",
      "pattern": "^[0-9][0-9][0-9][0-9]\.[0-9][0-9]?\.[0-9][0-9]?$"
    },
    "qr-code-camera-scanner": {
      "type": "boolean"
    },
    "key-string-generator": {
      "type": "object",
      "properties": {
        "numberOfCharacters": {
          "type": "integer",
          "minimum": 0,
          "maximum": 24
        },
        "characterType": {
          "enum": [
            "digit"
          ]
        }
      }
    },
    "qr-code-generator": {
      "type": "object",
      "properties": {}
    },
    "generator": {
      "enum": [
        "hash-key",
        "qr-code"
      ]
    },
    "data-encryption": {
      "properties": {
        "encryptionMethod": {
          "enum": [
            "finger-print",
            "numeric-code",
            "security-question",
            "password",
            "hash-key"
          ]
        }
      }
    },
    "data-storage": {
      "properties": {
        "accessFrequency": {
          "enum": [
            "low",
            "medium",
            "high"
          ]
        },
        "capacity": {
          "type": "object",
          "properties": {
            "amount": {
              "type": "integer"
            },
            "unit": {
              "enum": [
                "mb",
                "gb",
                "tb"
              ]
            }
          }
        }
      }
    },
    "platforms": {
      "description": "The hardware devices that the application can run on.",
      "type": "array",
      "items": {
        "enum": [
          "touch-screen-phone",
          "cloud-server"
        ]
      }
    }
  },
  "required": [ "version", "platforms" ]
}
