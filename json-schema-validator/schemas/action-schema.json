{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "/action",
  "title": "Action",
  "description": "An action that can be executed onto the platform.",
  "type": "object",
  "properties": {
    "name": {
      "enum": [
        "upload-a-file-as-a-blob",
        "convert-the-blob-to-a-csv-json-array",
        "display-the-csv-json-array-in-a-readable-format",
        "create-a-secure-password"
      ]
    },
    "stack": {
      "enum": [
        "node-ts",
        "web-project"
      ]
    }
  },
}

